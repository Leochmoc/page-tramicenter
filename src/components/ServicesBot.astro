---
interface Props {
    title: string;
    minitext: string;
    text: string;
    img: string;
}

const { title, minitext, text, img } = Astro.props

---
<section class="relative flex items-center bg-zinc-400">
    <span class="w-full bg-zinc-900 h-full absolute z-10"></span>
    <article class="w-1/2 h-96 flex justify-center items-center z-20">
        <img src={img} alt={title} class="rounded-full w-3/4 h-72 shadow-md shadow-black">
    </article>
    <article class="w-1/2 flex flex-col items-center justify-center z-20 p-20 gap-10">
        <div class="flex flex-col justify-center items-center gap-4">
            <h2 class="text-3xl uppercase">{title}</h2>
            <hr class="w-60 h-2 bg-white">
        </div>
        <p class="text-2xl text-center">
            {minitext}
        </p>
        <p class="text-3xl text-center leading-snug uppercase">
            {text}
        </p>
    </article>
</section>

<style>
    span{
        clip-path: ellipse(100% 100% at 100% 100%);
    }
</style>