---
interface Props {
    title: string;
    link: string;
} 

const { title, link} = Astro.props
---

<article class="rounded-sm overflow-hidden shadow-xl shadow-black">
        <img src={link} alt={title} class="w-96 h-72">
        <div class="flex flex-col items-center justify-center bg-zinc-300  w-96 h-32 gap-5">
            <h2 class="uppercase text-black font-bold">{title}</h2>
            <button class="bg-zinc-600 px-5 py-3 rounded-xl text tracking-wider">¡ENTRA AQUÍ!</button>
        </div>
</article>
    